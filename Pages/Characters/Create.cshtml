@page
@model WebApp.Pages.Characters.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Status" class="control-label"></label>
                <input asp-for="Character.Status" class="form-control" />
                <span asp-validation-for="Character.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Character.LocationId">Location</label>
                <select asp-for="Character.LocationId" asp-items="Model.Locations">
                    <option value="">-- Select a Location --</option>
                </select>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
